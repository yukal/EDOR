<section class="request">
    <h2 class="title">Отправить заявку</h2>

    <form class="form-horizontal" name="request" action="buy.html" method="post">
        <div class="form-group">
            <label for="frm-name" class="col-sm-4 control-label">Ваше имя</label>
            <div class="col-sm-8">
                <input type="text" name="name" id="frm-name" value="Константин Константинопольский"
                       class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="frm-email" class="col-sm-4 control-label">Почта</label>
            <div class="col-sm-8">
                <input type="email" name="email" id="frm-email" value="konstantin@konstantinople.ua"
                       class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="frm-tel" class="col-sm-4 control-label">Телефон</label>
            <div class="col-sm-8">
                <input type="tel" name="tel" id="frm-tel" value="063 123-45-67" class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="frm-url" class="col-sm-4 control-label">URL товара</label>
            <div class="col-sm-8">
                <input type="text" name="url" id="frm-url" value="http://www.someeshop.com/product-url"
                       class="form-control">
            </div>
        </div>

        <div class="form-group">
            <label for="frm-comment" class="col-sm-4 control-label">Комментарий</label>
            <div class="col-sm-8">
                <textarea name="comment" id="frm-comment" rows="3" class="form-control">Хочу такие же оранжевые 45–го размера</textarea>
                <!-- <input type="text" name="comment" id="frm-comment" value="Хочу такие же оранжевые 45–го размера"
                       class="form-control"> -->
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-4 control-label">Скриншоты</label>
            <div class="col-sm-8">
                <div class="row">
                    <img src="img/sneakers.jpg" alt="sneakers" class="img-responsive col-sm-6">
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-sm-12">
                <button class="btn main" type="submit">Отправить заявку</button>
            </div>
        </div>
    </form>
</section>


